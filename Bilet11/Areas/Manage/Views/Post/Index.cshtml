@using Bilet11.Models;
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Post>
<div class="container">
    <a class="btn btn-primary my-3" asp-action="Create">Create</a>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>PrimaryTitle</th>
                <th>Description</th>
                <th>Date</th>
                <th>ImageUrl</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.PrimaryTitle</td>
                    <td>@item.Description</td>
                    <td>@item.Date</td>
                    <td>@item.ImageUrl</td>
                    <td><a class="btn btn-info" asp-area="Manage" asp-controller="Post" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td><a class="btn btn-danger" asp-area="Manage" asp-controller="Post" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

